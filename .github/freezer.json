{

    "triggers" : [
       {
        "type" : "pr_comment",
        "description" : "Freeze dev if command is sent in dev-to-master PR",
        "commands" : ["freeze", "unfreeze"],
        "target_branch" : "dev",
        "validations" : [
          {
            "type" : "pr_branch",
            "from_branch" : "^dev$",
            "to_branch" : "^master$"
          }
        ]
      },
       {
        "type" : "pr_comment",
        "description" : "Freeze master in any PR ",
        "commands" : ["freeze", "unfreeze"],
        "target_branch" : "master",
        "validations" : [
          {
            "type" : "pr_branch",
            "from_branch" : "^.*$",
            "to_branch" : "^.*$"
          }
        ]
      }
    ],

    "persistence" :
    {
      "file" : ".github/.freezer_data.json",
      "branch" : "freezer_sandbox"
    }
}
